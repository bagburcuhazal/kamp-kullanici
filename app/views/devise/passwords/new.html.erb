<h2>Şifremi Unuttum</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
<div class="container">
  <table class="table table-hover">
    <tr>
      <td>
        <%= f.input :email, :required => true, :autofocus => true, label: "E-mail Adresiniz" %>
      </td>
    </tr>
    
    <tr>
      <td>
        <%= f.button :submit, "Şifremi sıfırla", :class => "btn btn-sm btn-primary" %>
      </td>
    </tr>
    
    <tr>
      <td>
        <%= link_to "Kayıt Ol", new_registration_path(resource_name) %> | <%= link_to "Giriş Yap", new_session_path(resource_name) %>
      </td>
    </tr>
  </table>
</div>
<% end %>